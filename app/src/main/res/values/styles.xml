<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="LogoDesign">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/red_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/TransparentGrey</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">1.5</item>

        android:shadowDx="3"
        android:shadowDy="-3"
        android:shadowRadius="1.5" />
    </style>

    <style name="foodLabels">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#c90906</item>
        <item name="android:fontStyle">italic</item>
    </style>

    <style name="inputBoxes">
        <item name="android:background">#FFF</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="selectionBoxs">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="AppTheme.Button">
        <item name="colorButtonNormal">#c90906</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="updateButtons">
        <item name="android:textColor">#c90906</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
